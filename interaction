def construction_abri(cap , source_inf , vegr , veg , s , jourres , abri):
  """float*float*int*float*int*bool => bool*int*bool*bool"""
  #sauve:bool
  sauve = False
  #rand:float
  if jourres == -10 or vegr == 0:
    jourres = (veg/cap)/7
    abri = False
    sourceinf = False
    rand = [Random]
    if rand < s:
      sauve = True
  if jourres != 0:
    jourres = jourres - 1
  else:
    abri = True
  return jourres , abri , sauve , source_inf




def trouver_eau(p_eau , capadap , source_inf , hydrat):
  """float*float*bool*float => bool*float"""
  if source_inf == 1:
    hydrat = 1
  else:
    rand = [random]
    if rand <= 0.4*p_e:
      hydrat = hydrat + 0.3
    elif rand <= p_e :
      hydrat = hydrat + 0.6
      rand = [random]
      if rand > 0.4:
        source_inf = True
  return source_inf , hydrat





